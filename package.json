{
	"name": "cvfinder-api",
	"version": "1.0.0",
	"description": "Backend API for CVFinder â€“ a simple HR candidate search platform",
	"main": "dist/server.js",
	"type": "commonjs",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only --watch src src/server.ts",
		"build": "npm run build:ts && npm run build:min",
		"build:ts": "tsc",
		"build:min": "esbuild dist/**/*.js --outdir=dist-min --platform=node --format=esm --minify --sourcemap --outbase=dist",
		"start": "node dist/server.js",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui"
	},
	"author": "Eldiaby Hosny",
	"license": "ISC",
	"engines": {
		"node": ">=20"
	},
	"dependencies": {
		"argon2": "^0.44.0",
		"compression": "^1.8.1",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^9.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/compression": "^1.8.1",
		"@types/express": "^5.0.5",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"@vitest/ui": "^4.0.14",
		"esbuild": "^0.27.0",
		"mongodb-memory-server": "^10.3.0",
		"pino": "^10.1.0",
